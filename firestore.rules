rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Properties collection rules
    match /properties/{propertyId} {
      // Allow read access to all users for active properties
      allow read: if resource.data.status == 'active';
      
      // Allow create access to authenticated users
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.user_id
        && request.resource.data.status == 'active';
      
      // Allow update access only to the property owner
      allow update: if request.auth != null 
        && request.auth.uid == resource.data.user_id;
      
      // Allow delete access only to the property owner
      allow delete: if request.auth != null 
        && request.auth.uid == resource.data.user_id;
    }
    
    // Investments rules
    match /investments/{investmentId} {
      allow read, create: if request.auth != null && request.auth.uid == request.resource.data.user_id || request.auth.uid == resource.data.user_id;
    }

    // Bookings rules
    match /bookings/{bookingId} {
      allow read, create: if request.auth != null && (request.auth.uid == request.resource.data.user_id || request.auth.uid == resource.data.user_id);
    }

    // Live Group Interactions rules
    match /liveGroupInteractions/{id} {
      allow read, create: if request.auth != null && (request.auth.uid == request.resource.data.userId || request.auth.uid == resource.data.userId);
    }
    
    // Users collection rules
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Chats collection rules
    match /chats/{chatId} {
      // Allow read/write only to chat participants
      allow read: if request.auth != null && 
        request.auth.uid in resource.data.participants;
      
      // Allow create if user is one of the participants
      allow create: if request.auth != null && 
        request.auth.uid in request.resource.data.participants;
      
      // Allow update if user is a participant (for marking as read)
      allow update: if request.auth != null && 
        request.auth.uid in resource.data.participants;
        
      // Messages subcollection
      match /messages/{messageId} {
        // Allow read if user is a chat participant
        allow read: if request.auth != null && 
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
        
        // Allow create if user is a chat participant and is the sender
        allow create: if request.auth != null && 
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants &&
          request.auth.uid == request.resource.data.senderId;
      }
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}